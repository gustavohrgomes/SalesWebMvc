@model SalesWebMvc.Models.Seller

@{
    ViewData["Title"] = "Create";
}

<h2>@ViewData["Title"]</h2>

<hr />

<section class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <fieldset class="form-group">
                <label asp-for="Name" class="col-form-label"></label>
                <input asp-for="Name" type="text" class="form-control" />
            </fieldset>

            <fieldset class="form-group">
                <label asp-for="Email" class="col-form-label"></label>
                <input asp-for="Email" type="email" class="form-control" />
            </fieldset>

            <fieldset class="form-group">
                <label asp-for="BirthDate" class="col-form-label"></label>
                <input asp-for="BirthDate" type="date" class="form-control" />
            </fieldset>

            <fieldset class="form-group">
                <label asp-for="BaseSalary" class="col-form-label"></label>
                <input asp-for="BaseSalary" type="text" class="form-control" />
            </fieldset>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
        </form>
    </div>

</section>